@model TeamBuilderPkmnASP.Models.Pokemon

@{
    ViewData["Title"] = "Details";
}

@if (Model != null)
{
    <h1>Details</h1>

    <div>
        <h4>Pokemon</h4>
        <img src="@Model.Image" />
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Identifier)
            </dd>
            <dt class="col-sm-2">
                Pokedex ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SpeciesId)
            </dd>
            <dt class="col-sm-2">
                Base variant ?
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDefault)
            </dd>
            <dd class="col-sm-2">
                Types :
            </dd>
            <dd class="col-sm-10">
                @foreach (TeamBuilderPkmnASP.Models.Type type in Model.Types)
                {
                    <div class="col-sm-3">
                        <img src="@type.Image" alt="@type.Name" width="66"/>
                    </div>
                }
            </dd>
        </dl>
    </div>
    <div>
        <a href="../#@Model.Identifier">Back to List</a>
    </div>
}